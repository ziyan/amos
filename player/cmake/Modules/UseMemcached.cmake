CMAKE_MINIMUM_REQUIRED (VERSION 2.4 FATAL_ERROR)
IF (COMMAND CMAKE_POLICY)
    CMAKE_POLICY (SET CMP0003 NEW)
    IF (POLICY CMP0011)
        CMAKE_POLICY (SET CMP0011 NEW)
    ENDIF (POLICY CMP0011)
ENDIF (COMMAND CMAKE_POLICY)

INCLUDE (FindPkgConfig)
IF (NOT PKG_CONFIG_FOUND)
    SET (MEMCACHED_CFLAGS "")
    SET (MEMCACHED_INCLUDE_DIRS )
    LIST (APPEND MEMCACHED_INCLUDE_DIRS "/usr/include")
    SET (MEMCACHED_LINK_LIBS m;z)
    LIST (APPEND MEMCACHED_LINK_LIBS "memcached")
    SET (MEMCACHED_LIBRARY_DIRS )
    LIST (APPEND MEMCACHED_LIBRARY_DIRS "/usr/lib")
    SET (MEMCACHED_LINK_FLAGS "")
ELSE (NOT PKG_CONFIG_FOUND)
    pkg_check_modules (MEMCACHED_PKG REQUIRED libmemcached)
    IF (MEMCACHED_PKG_CFLAGS_OTHER)
        LIST_TO_STRING (MEMCACHED_CFLAGS "${MEMCACHED_PKG_CFLAGS_OTHER}")
    ELSE (MEMCACHED_PKG_CFLAGS_OTHER)
        SET (MEMCACHED_CFLAGS_OTHER "")
    ENDIF (MEMCACHED_PKG_CFLAGS_OTHER)
    SET (MEMCACHED_INCLUDE_DIRS ${MEMCACHED_PKG_INCLUDE_DIRS})
    SET (MEMCACHED_LINK_LIBS ${MEMCACHED_PKG_LIBRARIES})
    SET (MEMCACHED_LIBRARY_DIRS ${MEMCACHED_PKG_LIBRARY_DIRS})
    IF (MEMCACHED_PKG_LDFLAGS_OTHER)
        LIST_TO_STRING (MEMCACHED_LINK_FLAGS ${MEMCACHED_PKG_LDFLAGS_OTHER})
    ELSE (MEMCACHED_PKG_LDFLAGS_OTHER)
        SET (MEMCACHED_LINK_FLAGS "")
    ENDIF (MEMCACHED_PKG_LDFLAGS_OTHER)
ENDIF (NOT PKG_CONFIG_FOUND)


